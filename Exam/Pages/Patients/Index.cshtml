@page
@model Exam.Pages.Patients.IndexModel
@{
}


<br>
<h2>List of Patients</h2>
<a class='btn btn-primary btn-sm' href='/Patients/Create'>Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Suffix</th>
            <th>Birth date</th>
            <th>Gender</th>
            <th>Initial Diagnosis


        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.ListPatients)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.MiddleName</td>
                <td>@item.LastName</td>
                <td>@item.SuffixName</td>
                <td>@item.BirthDate</td>
                <td>@item.Gender</td>
                <td>@item.InitialDiagnosis</td>
                <td>
                    <a class='btn btn-primary btn-sm' href="Patients/Edit?id=@item.Id">Edit</a>
                    <a class='btn btn-primary btn-sm' href="Patients/Delete?id=@item.Id">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>