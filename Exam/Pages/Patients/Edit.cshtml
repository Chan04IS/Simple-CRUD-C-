@page
@model Exam.Pages.EditModel
@{
}
<br>

<h2>Edit Patient</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<form method="POST">
    <input type="hidden" name="id" value="@(Model.patientInfo != null ? Model.patientInfo.id : "")">

    <div class="container">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">First Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="firstname" value="@Model.patientInfo?.FirstName">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">Middle Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="middlename" value="@Model.patientInfo?.MiddleName">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">Last Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="lastname" value="@Model.patientInfo?.LastName">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">Suffix</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="suffixname" value="@Model.patientInfo?.SuffixName">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">BirthDate</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="birthdate" placeholder="YYYY-MM-DD HH:MM:SS" value="@Model.patientInfo?.BirthDate">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">Gender</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="gender" value="@Model.patientInfo?.Gender">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label text-end">Initial Diagnosis</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="initialdiagnosis" value="@Model.patientInfo?.InitialDiagnosis">
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.successMessage</strong>
                        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
            </div>
        </div>
    </div>
</form>
